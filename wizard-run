#ubnt@wehrtest-router:/var/log$ sudo cat /tmp/result.json
#{
#    "enabled": "on",
#    "bridge": "",
#    "portnumber": "5101"
#}

case "$ACTION" in
    load)
        load
        ;;
    apply)
        apply
        ;;
esac

echo "EdgeMAX ER-wizard-0xFF-OpenVPN2TS ended $(date +%Y-%m-%d/%H:%M:%S.%N) Session="$$ >>$log
